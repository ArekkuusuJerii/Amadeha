<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.codejam.amadeha">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".game.AcraReport"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Amadeha -->
        <activity
            android:name=".main.MainActivity"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="sensorPortrait"
            android:label="AMADEHA">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- Amadeha game -->
        <activity
            android:name=".game.LoadingScreen"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:noHistory="true"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".game.LevelsScreen"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:noHistory="false"
            android:screenOrientation="sensorLandscape"/>
        <!-- Levels -->
        <activity
            android:name=".game.levels.equation.EquationScreen"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:noHistory="false"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".game.levels.function.FunctionScreen"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:noHistory="false"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".game.levels.matrix.MatrixScreen"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:noHistory="false"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".game.levels.sets.SetsScreen"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:noHistory="false"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".game.levels.statistic.StatisticScreen"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:noHistory="false"
            android:screenOrientation="sensorLandscape"/>
        <!-- Amadeha service -->
        <service
            android:name=".game.data.settings.SoundService"
            android:enabled="true"
            android:stopWithTask="true"/>

        <!-- Amadeha main -->
        <activity
            android:name=".main.contenido.MenuContenido"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".main.contenido.MenuContenidoTemaUno"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".main.contenido.MenuContenidoTemaDos"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".main.contenido.MenuContenidoTemaTres"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".main.contenido.MenuContenidoTemaCuatro"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".main.contenido.MenuContenidoTemaCinco"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".main.videos.MenuVideos"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".main.videos.youtube.ConjuntosVideo"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".main.videos.youtube.FuncionesVideo"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".main.videos.youtube.EcuacionesVideo"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".main.videos.youtube.MatricesVideo"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".main.videos.youtube.EstadisticaVideo"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>