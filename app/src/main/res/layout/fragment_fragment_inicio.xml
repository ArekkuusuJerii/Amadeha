<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:label="Inicio"
    tools:context="com.codejam.amadeha.main.inicio.FragmentInicio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Índice"
            android:textColor="@color/bg_screen1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            style="@style/Divider"
            android:layout_margin="10sp"
            android:background="@android:color/darker_gray" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow android:paddingTop="25dp">

                <TextView
                    android:id="@+id/teoriaConjunto"
                    android:paddingLeft="15dp"
                    android:paddingTop="17dp"
                    android:text="@string/teoriaC"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp"
                    />

                <ImageView
                    android:id="@+id/_game0"
                    android:background="@android:color/transparent"
                    android:paddingLeft="110dp"
                    android:src="@drawable/conjuntosi" />
            </TableRow>

            <TableRow android:paddingTop="15dp">

                <TextView
                    android:id="@+id/teoriaFuncion"
                    android:paddingLeft="15dp"
                    android:paddingTop="17dp"
                    android:text="@string/funcion"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/_game1"
                    android:background="@android:color/transparent"
                    android:paddingLeft="110dp"
                    android:src="@drawable/functioni" />
            </TableRow>

            <TableRow android:paddingTop="15dp">

                <TextView
                    android:id="@+id/teoriaEcuaciones"
                    android:paddingLeft="15dp"
                    android:paddingTop="17dp"
                    android:text="@string/ecuaciones"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/_game2"
                    android:background="@android:color/transparent"
                    android:paddingLeft="110dp"
                    android:src="@drawable/equationi" />
            </TableRow>

            <TableRow android:paddingTop="15dp">

                <TextView
                    android:id="@+id/teoriaMatrices"
                    android:paddingLeft="15dp"
                    android:paddingTop="17dp"
                    android:text="@string/matrices"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/_game3"
                    android:background="@android:color/transparent"
                    android:paddingLeft="110dp"
                    android:src="@drawable/matrixi" />
            </TableRow>

            <TableRow android:paddingTop="15dp">

                <TextView
                    android:id="@+id/teoriaEstadistica"
                    android:paddingLeft="15dp"
                    android:paddingTop="17dp"
                    android:text="@string/estadisticaD"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/_game4"
                    android:background="@android:color/transparent"
                    android:paddingLeft="110dp"
                    android:src="@drawable/statistici" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</FrameLayout>

