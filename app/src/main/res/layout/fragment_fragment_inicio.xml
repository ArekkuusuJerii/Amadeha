<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.codejam.amadeha.main.inicio.FragmentInicio"
             tools:ignore="ContentDescription">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="@string/indice"
                android:textColor="@color/bg_screen4"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <View
                style="@style/Divider"
                android:layout_margin="10sp"
                android:background="@android:color/darker_gray"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow android:paddingTop="25dp">

                    <TextView
                        android:id="@+id/teoriaConjunto"
                        android:padding="15dp"
                        android:text="@string/teoriaC"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:background="@android:color/transparent"
                            android:src="@drawable/conjuntos"/>
                    </LinearLayout>
                </TableRow>

                <TableRow android:paddingTop="15dp">

                    <TextView
                        android:id="@+id/teoriaFuncion"
                        android:padding="15dp"
                        android:text="@string/funcion"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:background="@android:color/transparent"
                            android:src="@drawable/function"/>
                    </LinearLayout>
                </TableRow>

                <TableRow android:paddingTop="15dp">

                    <TextView
                        android:id="@+id/teoriaEcuaciones"
                        android:padding="15dp"
                        android:text="@string/ecuaciones"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:background="@android:color/transparent"
                            android:src="@drawable/equation"/>
                    </LinearLayout>
                </TableRow>

                <TableRow android:paddingTop="15dp">

                    <TextView
                        android:id="@+id/teoriaMatrices"
                        android:padding="15dp"
                        android:text="@string/matrices"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:background="@android:color/transparent"
                            android:src="@drawable/matrix"/>
                    </LinearLayout>
                </TableRow>

                <TableRow android:paddingTop="15dp">

                    <TextView
                        android:id="@+id/teoriaEstadistica"
                        android:padding="15dp"
                        android:text="@string/estadisticaD"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:background="@android:color/transparent"
                            android:src="@drawable/statistic"/>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>

