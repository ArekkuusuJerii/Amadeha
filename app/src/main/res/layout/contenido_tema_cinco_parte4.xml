<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cover_details"
        android:layout_marginTop="31dp">

        <TableRow>

        <TextView android:layout_width="15dp" />

        <com.codejam.amadeha.main.JustifyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/bg_screen3"
            android:textSize="16sp"
            android:text="@string/layout5Estadistica1.1" />
    </TableRow>

        <TableRow>

            <TextView android:layout_width="15dp" />

            <com.codejam.amadeha.main.JustifyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/bg_screen3"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/subtitulo3Estadistica" />
        </TableRow>

        <TableRow>

            <TextView android:layout_width="15dp" />

            <com.codejam.amadeha.main.JustifyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/bg_screen3"
                android:textSize="16sp"
                android:text="@string/layout6Estadistica" />
        </TableRow>
    </TableLayout>
</RelativeLayout>