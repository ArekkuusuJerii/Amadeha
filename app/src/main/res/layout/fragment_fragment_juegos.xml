<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:label="Juegos"
    tools:context="com.codejam.amadeha.main.juegos.FragmentJuegos">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="75dp" />

        <android.support.v4.view.ViewPager
            android:paddingTop="20dp"
            android:id="@+id/pager_juegos"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicador_juegos"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="250dp"
            android:padding="10dip"
            app:fillColor="@color/colorPrimaryDark"
            app:pageColor="#fff"
            app:snap="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="Hola! ¿Están preparados para demostrar sus conocimientos adquiridos? \n" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow>
                <TextView
                    android:layout_width="15dp"/>

                <com.codejam.amadeha.main.JustifyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="20dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/fragmentJuegos" />
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"/>

        <Button
            android:id="@+id/button"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/bg_screen3"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comenzar"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</FrameLayout>

