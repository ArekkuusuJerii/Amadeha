<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fondo"
                android:orientation="vertical">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TableRow>

            <TextView android:layout_width="15dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:paddingEnd="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/ecuaciones1"/>
        </TableRow>

        <TableRow>

            <TextView android:layout_width="15dp"/>

            <com.codejam.amadeha.main.JustifyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="0dp"
                android:paddingRight="10dp"
                android:text="@string/layout4Ecuaciones"
                android:textColor="@color/bg_screen3"
                android:textSize="16sp"/>
        </TableRow>

        <TableRow>

            <TextView android:layout_width="15dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:paddingEnd="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/ecuaciones2"/>
        </TableRow>

        <TableRow>

            <TextView android:layout_width="15dp"/>

            <com.codejam.amadeha.main.JustifyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:paddingRight="10dp"
                android:text="@string/layout5Ecuaciones"
                android:textColor="@color/bg_screen3"
                android:textSize="16sp"/>
        </TableRow>

        <TableRow>

            <TextView android:layout_width="15dp"/>

            <com.codejam.amadeha.main.JustifyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:paddingRight="10dp"
                android:text="@string/layout5Ecuaciones1.1"
                android:textColor="@color/bg_screen3"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </TableRow>

        <TableRow>

            <TextView android:layout_width="15dp"/>

            <com.codejam.amadeha.main.JustifyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="@string/layout5Ecuaciones1.2"
                android:textColor="@color/bg_screen3"
                android:textSize="16sp"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>