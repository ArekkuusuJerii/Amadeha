<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <TableRow>

                <TextView android:layout_width="15dp" />

                <com.codejam.amadeha.main.JustifyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="20dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/bg_screen3"
                    android:text="@string/layout4Ecuaciones" />
            </TableRow>

            <TableRow>

                <TextView android:layout_width="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="20dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/ecuaciones2"/>
            </TableRow>

            <TableRow>

                <TextView android:layout_width="15dp" />

                <com.codejam.amadeha.main.JustifyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="20dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/bg_screen3"
                    android:text="@string/layout5Ecuaciones"/>
            </TableRow>
            <TableRow>

                <TextView android:layout_width="15dp" />

                <com.codejam.amadeha.main.JustifyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="20dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/bg_screen3"
                    android:textStyle="bold"
                    android:text="@string/layout5Ecuaciones1.1"/>
            </TableRow>
            <TableRow>

                <TextView android:layout_width="15dp" />

                <com.codejam.amadeha.main.JustifyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="20dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/bg_screen3"
                    android:text="@string/layout5Ecuaciones1.2"/>
            </TableRow>
        </TableLayout>
</RelativeLayout>