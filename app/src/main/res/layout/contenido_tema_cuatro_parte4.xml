<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="147dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow>

            <TextView android:layout_width="15dp" />

            <com.codejam.amadeha.main.JustifyTextView
                android:id="@+id/justifyTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:paddingRight="10dp"
                android:text="@string/layout7Matrices"
                android:textSize="16sp"
                android:textColor="@color/bg_screen3"/>
        </TableRow>
        <TableRow>

            <TextView android:layout_width="15dp" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:paddingEnd="80dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="30dp"
                android:src="@drawable/matrices6" />
        </TableRow>
        <TableRow>

            <TextView android:layout_width="15dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:paddingEnd="80dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="30dp"
                android:src="@drawable/matrices7" />
        </TableRow>
    </TableLayout>
</RelativeLayout>