<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TableRow>

            <TextView android:layout_width="15dp" />

            <com.codejam.amadeha.main.JustifyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:paddingRight="10dp"
                android:textSize="16sp"
                android:textColor="@color/bg_screen3"
                android:text="@string/layout9Ecuaciones1.1" />
        </TableRow>

        <TableRow>

            <TextView android:layout_width="15dp" />

            <com.codejam.amadeha.main.JustifyTextView
                android:id="@+id/justifyTextView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:paddingRight="10dp"
                android:textSize="16sp"
                android:textColor="@color/bg_screen3"
                android:textStyle="bold"
                android:text="@string/subtitulo2Ecuaciones" />
        </TableRow>

        <TableRow>

            <TextView android:layout_width="15dp" />

            <com.codejam.amadeha.main.JustifyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:paddingRight="10dp"
                android:textSize="16sp"
                android:textColor="@color/bg_screen3"
                android:text="@string/layout10Ecuaciones" />
        </TableRow>

        <TableRow>

            <TextView android:layout_width="15dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ecuaciones4" />
        </TableRow>
    </TableLayout>
</RelativeLayout>