<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/start_instruction_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent">

            <ImageView
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="113dp"
                android:src="@drawable/instructor" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="99dp"
                android:src="@drawable/dialogo" />

            <TextView
                android:layout_width="190dp"
                android:layout_height="130dp"
                android:layout_alignEnd="@+id/imageView9"
                android:layout_alignTop="@+id/imageView9"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="19dp"
                android:text="@string/bienvenidos4"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
