<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_instruction_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="278dp"
                android:layout_marginEnd="17dp"
                android:layout_toStartOf="@+id/textView2"
                android:src="@drawable/instructor"/>

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:rotation="90"
                android:src="@drawable/dialogo"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_alignBottom="@+id/imageView9"
                android:layout_alignEnd="@+id/imageView9"
                android:layout_marginBottom="22dp"
                android:layout_marginEnd="21dp"
                android:text="@string/bienvenidos5"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
